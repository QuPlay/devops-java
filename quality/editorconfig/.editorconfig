# ==============================================================================
# EditorConfig
#
# Copy this file to your project root as '.editorconfig'
# Ensures consistent coding styles across different editors and IDEs.
#
# Source: https://github.com/QuPlay/DevOps-Java
# ==============================================================================

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Java files
[*.java]
indent_size = 4
max_line_length = 120
continuation_indent_size = 8

# XML files (pom.xml, etc.)
[*.xml]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Properties files
[*.properties]
charset = utf-8

# Shell scripts
[*.sh]
indent_size = 4
end_of_line = lf

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefile (requires tabs)
[Makefile]
indent_style = tab

# SQL files
[*.sql]
indent_size = 4

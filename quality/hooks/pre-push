#!/bin/bash
# ==============================================================================
# Pre-push Hook
#
# Purpose: Compile check before push (can be bypassed with --no-verify)
# Source:  https://github.com/QuPlay/DevOps-Java
# ==============================================================================
set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${GREEN}[DevOps]${NC} Running pre-push checks..."

# ==============================================================================
# Check 1: Maven Compile
# ==============================================================================
echo -n "  Compiling project... "

# Check if pom.xml exists
if [ ! -f "pom.xml" ]; then
    echo -e "${YELLOW}SKIPPED (no pom.xml)${NC}"
    exit 0
fi

# Run compile
if mvn compile -q -DskipTests 2>/dev/null; then
    echo -e "${GREEN}OK${NC}"
else
    echo -e "${RED}FAILED${NC}"
    echo -e "${RED}[DevOps] Compilation failed. Please fix errors before pushing.${NC}"
    echo -e "${YELLOW}Run 'mvn compile' to see detailed errors.${NC}"
    exit 1
fi

# ==============================================================================
# Check 2: Verify no merge conflict markers
# ==============================================================================
echo -n "  Checking merge conflicts... "

CONFLICT_FILES=$(git diff --name-only HEAD | xargs grep -l "^<<<<<<< \|^=======$\|^>>>>>>> " 2>/dev/null || true)

if [ -n "$CONFLICT_FILES" ]; then
    echo -e "${RED}FAILED${NC}"
    echo -e "${RED}Unresolved merge conflicts found in:${NC}"
    echo "$CONFLICT_FILES"
    exit 1
else
    echo -e "${GREEN}OK${NC}"
fi

# ==============================================================================
# Check 3: Protected branch warning
# ==============================================================================
CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD)
PROTECTED_BRANCHES="main master release pre-release"

for branch in $PROTECTED_BRANCHES; do
    if [ "$CURRENT_BRANCH" = "$branch" ]; then
        echo -e "${YELLOW}⚠️  WARNING: Pushing directly to protected branch '${branch}'${NC}"
        echo -e "${YELLOW}   Consider creating a Merge Request instead.${NC}"
        break
    fi
done

echo ""
echo -e "${GREEN}[DevOps] Pre-push checks PASSED${NC}"
exit 0
